<div class="w-50 p-3">
<table class="top-players">
  <h1>Top 3 Players</h1>
  <tr>
    <th>#</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Rating</th>
  </tr>
  <% @top_players.each_with_index do |player, i|%>
  <tr>
    <td> <%= i+1 %></th>
    <td><%= player.first_name  %></td>
    <td><%= player.last_name %></td>
    <td><%= player.rating %></td>
  </tr>
  <% end %>
</table>
</div>
